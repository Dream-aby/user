<?xml version="1.0" encoding="UTF-8"?>
<c3p0-config>
	<!-- 默认配置，只可以出现一次 -->
	<default-config>
		<property name="driverClass">com.mysql.jdbc.Driver</property>      <!--驱动路径-->

		<property name="jdbcUrl">
			<![CDATA[jdbc:mysql://127.0.0.1:3306/mydatabase?useUnicode=true&characterEncoding=UTF-8]]>   <!--建立链接-->
		</property>
		<!--数据库用户及密码-->
		<property name="user">root</property>
		<property name="password">123456</property>
	</default-config>
</c3p0-config>
